<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f9b893">

    <ImageView
        android:layout_width="285dp"
        android:layout_height="254dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/first"
        android:layout_gravity="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome to Your Calorie Management App"
        android:textColor="#ec3e71"
        android:textSize="20dp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="40dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="Here to keep a track of your calories to maintain a fit and healthy lifestyle."
        android:textColor="#9e1b0c"
        android:textSize="17dp"
        android:layout_marginTop="20dp"/>
</LinearLayout>