<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/download">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Username"
        android:id="@+id/user1"
        android:textAlignment="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="235dp"
        android:backgroundTint="#111111"
        android:textColorHint="#181717"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Password"
        android:inputType="textWebPassword"
        android:textAlignment="center"
        android:id="@+id/pass1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#131212"
        android:textColorHint="#141413"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:id="@+id/mail"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:hint="Enter Recovery Mail"
        android:layout_marginTop="20dp"
        android:backgroundTint="#0F0F0F"
        android:textColorHint="#181717" />

    <Button
        android:id="@+id/reg"
        android:layout_width="114dp"
        android:layout_height="61dp"
        android:layout_gravity="center"
        android:textSize="15dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#f69f20"
        android:text="Register" />

</LinearLayout>